


<div class="row">

	<h2 class="text-center g-4 text-white">Chats Disponibles</h2>

	<div class="row row-cols-1 row-cols-md-2 g-4">
		@foreach (var e in ChatSignalR.Controllers.ChatController.Rooms)
		{
			<div class="col">
				<div class="card text-center">
					<div class="card-body">
						<h5 class="card-title">@e.Value</h5>
						<p class="card-text">Descripción de prueba para el chat de @e.Value</p>	
						<a href="~/Chat/Room?room=@e.Key" class="btn btn-primary">Entrar al chat</a>
				</div>
			</div>
		</div>	
		}
	</div>
</div>

